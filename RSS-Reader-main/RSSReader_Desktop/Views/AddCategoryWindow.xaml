<Window x:Class="RSSReader_Desktop.Views.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Adicionar Categoria" Height="192" Width="380" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="40,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Text="Categoria:"/>
        <TextBox Style="{DynamicResource RoundTextBox}" Text="{Binding Category}" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="126,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" Height="29"/>
        <TextBlock Style="{DynamicResource HintCategory}" IsHitTestVisible="False" Text="Introduza a categoria" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5,44,0,0" Foreground="DarkGray"/>
        <Button Style="{DynamicResource RoundButton}" Content="Adicionar" HorizontalAlignment="Left" Margin="126,100,0,0" VerticalAlignment="Top" Height="31" Width="87" Click="Add_Click"/>
        <Button Style="{DynamicResource RoundButton}" Content="Cancelar" HorizontalAlignment="Left" Margin="247,100,0,0" VerticalAlignment="Top" Height="31" Width="87" Click="Cancel_Click"/>
    </Grid>
</Window>